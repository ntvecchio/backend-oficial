datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id             Int                @id @default(autoincrement())
  nome           String             @db.VarChar(100)
  email          String             @unique @db.VarChar(200)
  telefone       String             @db.VarChar(15)
  senha          String             @db.VarChar(500)
  public_id      String             @unique @default(uuid())
  isAdmin        Boolean            @default(false)
  criadoEm       DateTime           @default(now())
  atualizadoEm   DateTime           @updatedAt
  pontosEsportivos PontosEsportivos[] // Relacionamento com pontos esportivos
  sessions       Session[]          @relation("UserSessions")
}

model Modalidade {
  id             Int                @id @default(autoincrement())
  nome           String             @unique @db.VarChar(100)
  urlImage       String             @db.Text
  incrementKey   Int                @unique
  pontosEsportivos PontosEsportivos[]
}

model PontosEsportivos {
  id             Int                @id @default(autoincrement())
  endereco       String             @db.VarChar(255)
  incrementKey   Int                @unique
  usuarioId      Int
  usuario        Usuario            @relation(fields: [usuarioId], references: [id])
  modalidadeId   Int
  modalidade     Modalidade         @relation(fields: [modalidadeId], references: [id])
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
}

model Session {
  id         Int                @id @default(autoincrement())
  token      String             @db.VarChar(500)
  createdAt  DateTime           @default(now())
  userId     Int
  user       Usuario            @relation("UserSessions", fields: [userId], references: [id])

  @@unique([userId, token])
}
